<h2>User info</h2>
<%= image_tag user.get_profile_image(100, 100) %>
<div class="row">
  <div class="col">
    <p>name</p>
    <hr>
    <p>introduction</p>
  </div>
  <div class="col">
    <p><%= user.name %></p>
    <hr>
    <p><%= user.introduction %></p>
  </div>
</div>

<div class="d-grid gap-2 col-6 mx-auto">
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-lg" do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
</div>


<h1>New book</h1>
<%= form_with model: book, url: books_path do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>